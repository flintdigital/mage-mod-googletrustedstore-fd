<!-- BEGIN: Google Trusted Stores -->
<script type="text/javascript">
  var gts = gts || [];

  gts.push(["id", "<?= $this->getAccountId() ?>"]);
  gts.push(["badge_position", "BOTTOM_RIGHT"]);
  gts.push(["locale", "en_US"]);
  <?php if ($this->hasGoogleShoppingItem()): ?>
  gts.push(["google_base_offer_id", <?= Mage::helper('core')->jsonEncode($this->getGoogleShoppingItemId()) ?>]);
  <?php endif ?>
  <?php if ($this->getGoogleShoppingAccountId()): ?>
  gts.push(["google_base_subaccount_id", "<?= $this->getGoogleShoppingAccountId() ?>"]);
  <?php endif ?>

  (function() {
    var gts = document.createElement("script");
    gts.type = "text/javascript";
    gts.async = true;
    gts.src = "https://www.googlecommerce.com/trustedstores/api/js";
    var s = document.getElementsByTagName("script")[0];
    s.parentNode.insertBefore(gts, s);
  })();
</script>
<!-- END: Google Trusted Stores -->